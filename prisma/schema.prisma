generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model Registrations {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String
  phone         String
  institution   String
  district      String
  teamLeadName  String
  teamLeadPhone String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ambassador {
  id                   Int      @id @default(autoincrement())
  email                String   @unique
  referralCode         String   @unique
  fullName             String
  phone                String
  institution          String
  branch               String
  year                 String
  whyAmbassador        String
  clubsTeamsActivities String?
  links                String?
  additional           String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}
